    title Open Product Evaluation - Admin Interface

    include includes/css/core.pug

    // Page level plugin CSS
    link(href='vendor/datatables/dataTables.bootstrap4.css', rel='stylesheet')

    include includes/css/custom.pug

  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbar.pug
    .content-wrapper
      .container-fluid
        // Breadcrumbs
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Dashboard
          li.breadcrumb-item.active Umfragen
        // Example DataTables Card
        .card.mb-3
          .card-header
            i.fa.fa-table
            |  Liste aller Umfragen
          .card-body
            .table-responsive
              table#editSurveyTable.table.table-bordered(width='100%', cellspacing='0')
                thead
                  tr
                    th Titel
                    th Beschreibung
                    th Ersteller
                    th isPublic
                    th Question Types
                    th Kontexte
                    th Verwaltung
                tbody
                  tr
                    td Untersuchung zum Verhalten von Informatikern in Hochschulen
                    td Eine wissenschaftliche Umfrage mit der Forschungsfrage: "Wie verhalten sich Informatiker?
                    td John Doe
                    td true
                    td CHOICE, REGULATOR, LIKE
                    td Forum Gummersbach
                    td test
                  tr
                    td Öffentliche Umfrage im Rahmen des Modules "Computerethik"
                    td Eine wissenschaftliche Umfrage mit der Forschungsfrage: "Künstliche Intelligenz?
                    td Jane Doe
                    td false
                    td RANKING, LIKE
                    td TH Köln, Campus Gummersbach
                    td test
                  tr
                    td Eine weitere Umfrage in der gesamten Liste
                    td Eine Example Umfrage Beschreibung mit der Forschungsfrage: "Wer ist eigentlich dieser John Doe?"
                    td Peter Parker
                    td true
                    td RANKING, LIKEDISLIKE, REGULATOR
                    td TH Köln Deutz
                    td test
                    
        .card.mb-3
          .card-header
            i.fa.fa-table
            |  Umfrage erstellen
          .card-body
              .container
                form.form-horizontal(role='form', method='POST', action='/register')
                  .row
                    .col-md-3.field-label-responsive
                      label(for='title') Titel
                    .col-md-6
                      .form-group
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                          .input-group-addon(style='width: 2.6rem')
                            
                          input#title.form-control(type='text', name='title', placeholder='Titel', required='', autofocus='')
                    .col-md-3
                      .form-control-feedback
                        span.text-danger.align-middle
                          // Put name validation error messages here
                  .row
                    .col-md-3.field-label-responsive
                      label(for='description') Beschreibung
                    .col-md-6
                      .form-group
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                          .input-group-addon(style='width: 2.6rem')
                          
                          input#description.form-control(type='text', name='beschreibung', placeholder='Beschreibung', required='', autofocus='')
                    .col-md-3
                      .form-control-feedback
                        span.text-danger.align-middle
                          // Put name validation error messages here
                  .row
                    .col-md-3.field-label-responsive
                      label(for='public') Öffentlich?
                    .col-md-6
                      .form-group
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                          .input-group-addon(style='width: 2.6rem')
                          input#public.form-control(type='checkbox', value='')
                    .col-md-3
                      .form-control-feedback
                        span.text-danger.align-middle
                          // Put e-mail validation error messages here
                  .row
                    .col-md-3
                      button.btn.btn-success(type='submit')
                        
                            |  Erstellen
                
